unit uTestWKConnection;
{

  Delphi DUnit Test Case
  ----------------------
  This unit contains a skeleton test case class generated by the Test Case Wizard.
  Modify the generated code to correctly setup and call the methods from the unit 
  being tested.

}

interface

uses
  TestFramework, uDatabaseConfig, uWKConnection, FireDAC.Comp.Client, SysUtils;

type
  // Test methods for class TWKConnection

  TestTWKConnection = class(TTestCase)
  strict private
    FWKConnection: TWKConnection;
  public
    procedure SetUp; override;
    procedure TearDown; override;
  published
    procedure TestConnect;
  end;

implementation

procedure TestTWKConnection.SetUp;
begin
  FWKConnection := TWKConnection.Create('../cfg/wk.ini');
end;

procedure TestTWKConnection.TearDown;
begin
  FWKConnection.Free;
  FWKConnection := nil;
end;

procedure TestTWKConnection.TestConnect;
begin
  FWKConnection.Connected := True;
end;

initialization
  // Register any test cases with the test runner
  RegisterTest(TestTWKConnection.Suite);
end.

